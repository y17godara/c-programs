{
  "tasks": [
    {
        "label": "compile",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-o",
          "output/${fileBasenameNoExtension}",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "label": "compile and run",
        "type": "shell",
        "command": "mkdir -p output && g++ -std=c++17 -o output/${fileBasenameNoExtension} ${file} && ./output/${fileBasenameNoExtension}",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }      
  ],
  "version": "2.0.0"
}
